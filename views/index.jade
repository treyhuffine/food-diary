extends layout

block content
  .row
    h1.diary-tag Food Diary
    buttn.btn.btn-warning(ng-click="showUser = showUser ? false : true") Show User
  .row#new-user-container(ng-show="showUser")
    h3.section-title User
    form
      .col-sm-6#personal-data
        label.label-spacer Name
        input.form-control(placeholder="Name" ng-model="user.name" required)
        label.label-spacer Age
        input.form-control(placeholder="Age" ng-model="user.age" type="number" required)
        label.label-spacer Gender
        select.form-control(ng-model="user.gender" required)
          option Male
          option Female
      .col-sm-6#user-measurables
        label.label-spacer Weight
        input.form-control(placeholder="Weight in Pounds" ng-model="user.weight" type="number" required)
        label.label-spacer Height
        input.form-control(placeholder="Height in Inches" ng-model="user.height" type="number" required)
        label.label-spacer Unit
        select.form-control(ng-model="user.unit" required)
          option in
          option cm
      button.save-user.btn.btn-success(type="Submit") Save user
  .row
    .col-sm-6#new-food
      h3.section-title Food
      form
        label.label-spacer Desciption
        input.form-control(placeholder="Food name" ng-model="food.name" required)
        label.label-spacer Meal
        select.form-control(ng-model="food.category")
          option Breakfast
          option Lunch
          option Dinner
          option Snack
          option Fourth Meal
        label.label-spacer Calories
        input.form-control(placeholder="Calories" ng-model="food.calories" type="number" required)
        label.label-spacer Servings
        input.form-control(placeholder="Servings" ng-model="food.servings" type="number" required)
        button.btn.btn-primary.food-button Save Food
        {{food}}
    .col-sm-6.stats-container
      h2 Current User: {{currentUser.name || "none"}}
      table.table-striped.stats-table
        thead
          tr
            th.stats-head BMI
            th.stats-head Old Weight
            th.stats-head Weight Gained
            th.stats-head Current Weight
        tbody
          tr
            td some var
            td some var
            td some var
            td some var
  .row
    .col-sm-12
      .food-container
        table.table-striped.food-table
          thead
            tr
              th.food-head Edit
              th.food-head Delete
              th.food-head Desciption
              th.food-head Meal
              th.food-head Calories
              th.food-head Servings
              th.food-head Date
          tbody
            tr
              td some var
              td some var
              td some var
              td some var
              td some var
              td some var
              td some var
